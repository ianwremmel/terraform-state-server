{
  "name": "terraform-state-server",
  "version": "1.0.0",
  "description": "Lightweight Terraform state server (with locking support)",
  "author": "Ian W. Remmel <design@ianwremmel.com>",
  "license": "MIT",
  "main": "src/index.js",
  "scripts": {
    "clean": "rimraf ./test/spec/*/{.terraform,errored.tfstate,terraform.tfstate.backup}",
    "lint": "npm run --silent lint:js && npm run --silent lint:changelog",
    "lint:changelog": "conventional-changelog-lint --from origin/master --to HEAD",
    "lint:commitmsg": "conventional-changelog-lint -e",
    "lint:eslint": "eslint --ignore-path .gitignore",
    "lint:js": "npm run --silent lint:eslint -- .",
    "lint:staged": "lint-staged",
    "start": "node -r babel-register .",
    "test": "./test/spec/test.sh",
    "posttest": "npm run lint"
  },
  "keywords": [],
  "dependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^7.2.3",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "body-parser": "^1.18.3",
    "bunyan": "^2.0.2",
    "compression": "^1.0.3",
    "express": "^4.15.4",
    "express-basic-auth": "^1.1.5",
    "morgan": "^1.8.2",
    "pg": "^7.4.3"
  },
  "devDependencies": {
    "@ianwremmel/eslint-config": "^2.2.0",
    "conventional-changelog": "^2.0.1",
    "conventional-changelog-lint": "^2.1.1",
    "eslint": "^5.6.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-mocha": "^5.0.0",
    "husky": "^1.0.1",
    "lint-staged": "^7.2.0"
  },
  "engines": {
    "node": ">=10.13.0"
  },
  "private": true,
  "lint-staged": {
    "*.js": "lint:eslint"
  },
  "husky": {
    "hooks": {
      "commit-msg": "npm run --silent lint:commitmsg",
      "pre-commit": "npm run --silent lint:staged"
    }
  }
}
